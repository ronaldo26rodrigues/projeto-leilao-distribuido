// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}


model User {
  id       String   @id @default(cuid())
  name     String
  cpf      String   @unique
  birthday DateTime
  email    String
  phone    String
  password String

  roles Role[]
}


model Role {
  id    Int    @id @default(autoincrement())
  name String
  users User[]
}
